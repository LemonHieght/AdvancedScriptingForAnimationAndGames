global proc string Addition(float $count[])
{
    float $total;
    for ($i=0; $i< size($count); $i++)
    {
        float $tempNum = $count[$i];
        $total += $tempNum; 
    }

    return ($total);
}
global proc string Subtraction(float $count[])
{
    float $total;
    for ($i=0; $i< size($count); $i++)
    {
        float $tempNum = $count[$i];
        $total -= $tempNum; 
    }

    return ($total);
}
global proc string Multiplication(float $count[])
{
    float $total = 1;
    for ($i=0; $i< size($count); $i++)
    {
        float $tempNum = $count[$i];
        $total *= $tempNum;
    }

    return ($total);
}

