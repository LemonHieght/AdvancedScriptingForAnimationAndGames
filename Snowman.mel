polySmooth  -method 0 -subdivisionType 2 -osdVertBoundary 1 -osdFvarBoundary 3 -osdFvarPropagateCorners 0 -osdSmoothTriangles 0 -osdCreaseMethod 0 -divisions 1 -bnr 1 -continuity 1 -keepBorder 1 -keepSelectionBorder 1 -keepHardEdge 0 -keepTessellation 1 -keepMapBorders 1 -smoothUVs 1 -propagateEdgeHardness 0 -subdivisionLevels 1 -divisionsPerEdge 1 -pushStrength 0.1 -roundness 1 -constructionHistory 1 button03;
